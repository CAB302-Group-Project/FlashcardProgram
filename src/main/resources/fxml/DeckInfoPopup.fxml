<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<VBox spacing="10" alignment="CENTER" xmlns="http://javafx.com/javafx/8.0.171"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="utilities.controllers.DeckInfoPopupController">
    <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>

    <Label text="Enter Deck Title:"/>
    <TextField fx:id="titleField" promptText="Deck title"/>

    <Label text="Enter Description:"/>
    <TextField fx:id="descriptionField" promptText="Deck description"/>

    <Button fx:id="confirmButton" text="Confirm" onAction="#handleConfirm" maxWidth="Infinity"/>
</VBox>
